<div class="card my-3 p-1">
    <div class="row">
        <div class="col-2">
            <img src="{{image}}">
        </div>
        <div class="col-5">
            <h4 class="mt-2">{{name}}</h4>
            <p>{{description}}</p>
        </div>
        <div class="col-2">
            {{#with price}}
            <div class="mt-4">{{title}}:</div>
            <div><big><b>{{value}}</b></big></div>
            {{/with}}
        </div>
        <div class="col-1 mt-5">{{amount}}</div>
        <div class="col-2">
            {{#each buttons}}
            <div class="my-4">
                <button
                    class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isDanger}} btn-outline-danger {{/if}}">{{text}}
                </button>
            </div>
            {{/each}}
        </div>
    </div>
</div>