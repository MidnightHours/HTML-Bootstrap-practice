<div>

    {{#with main}}
    <main>
        <section>
            {{> title data='Work history' big=true }}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <div class="my-2">
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (ще працюємо)
                            {{/if}}
                        </div>
                        <div>
                            {{> link href= company.url text=company.name blank=true noLine=true }}
                        </div>
                        <div class="mt-4 mb-2"><strong>Projects ({{projectAmount}})</strong></div>
                        <div>
                            <ul>
                                {{#each projects}}
                                <li>
                                    <div>
                                        {{#if url}}
                                        {{> link href=url text=name blank=true noLine=true }}
                                        {{else}}
                                        <b>{{name}}</b>
                                        {{/if}}
                                    </div>
                                    <div class="my-2">
                                        <p>{{about}}</p>
                                    </div>
                                    <div><em>Project stacks ({{stackAmount}})</em></div>
                                    <div class="my-2">
                                        <ul>
                                            {{#each stacks}}
                                            <li>{{name}}</li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    <div><em>Project awards ({{awardAmount}})</em></div>
                                    <div class="mt-2">
                                        <ul>
                                            {{#each awards}}
                                            <li>{{name}}</li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                    {{/each}}
                            </ul>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}


</div>