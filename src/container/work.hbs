<div>

	{{#with main}}
		<main>
			<section>
				{{> title data='Work history' big=true }}
				<div>
					<ul>
                        {{#each works}}
                            <li>
                                <div>{{position}}</div>

                                <br>

                                <div>{{duration.from}} - 
                                    {{#if duration.to}} 
                                       {{duration.to}}
                                    {{else}}
                                        (ще працюємо)
                                    {{/if}}
                                </div>
                                
                                <br>

                                <div>         
                                    {{> link href= company.url text=company.name blank=true noLine=true }}
                                </div>

                                <br>
                                <br>

                                <div><strong>Projects ({{projectAmount}})</strong></div>

                                <br>

                                <div>
                                    <ul>
                                        {{#each projects}}
                                            <li>
                                                <div>
                                                    {{#if url}}
                                                        {{> link href=url text=name blank=true noLine=true }}
                                                    {{else}}
                                                        <b>{{name}}</b>
                                                    {{/if}}
                                                </div>
                                                <br>
                                                <div><p>{{about}}</p></div>
                                                <br>
                                                <div><em>Project stacks ({{stackAmount}})</em></div>
                                                <br>
                                                <div>
                                                    <ul>
                                                        {{#each stacks}}
                                                            <li>{{name}}</li>
                                                        {{/each}}
                                                    </ul>
                                                </div>
                                                <br>
                                                <div><em>Project awards ({{awardAmount}})</em></div>
                                                <br>
                                                <div>
                                                    <ul>
                                                        {{#each awards}}
                                                            <li>{{name}}</li>
                                                        {{/each}}
                                                    </ul>
                                                </div>
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                        {{/each}}
                    </ul>
				</div>
			</section>
        </main>
    {{/with}}


</div>
