<main>
  {{> breadcrumb}}

  <h1 class="mb-4">{{header}}</h1>

  <div class="row g-2">
    {{#each sortBlock}}
    <div class="col-3 mb-5">
      <select class="form-select">
        <option selected disabled>{{placeholder}}</option>
        {{#each options}}
        <option value="{{value}}">{{text}}</option>
        {{/each}}
      </select>
    </div>
    {{/each}}

    <div class="col-4 mb-3">
      {{#with filterBlock}}
      <div class="card p-3">
        <div>
          <div class="mb-3">{{sellers.title}}</div>
          {{#each sellers.list}}
          <div class="form-check">
            <label class="form-check-label">{{value}}</label>
            <input class="form-check-input" type="checbox">
          </div>
          {{/each}}
        </div>

        <hr class="my-3">

        <div>
          {{#with brands}}
          <div class="mb-3">{{title}}</div>
          <input class="form-control mb-3" placeholder="{{input.placeholder}}">
          {{#each options}}
          <div class="form-check">
            <label class="form-check-label">{{value}}</label>
            <input class="form-check-input" type="checbox">
          </div>
          {{/each}}
          {{/with}}
        </div>

        <hr class="my-3">

        <div>
          {{#with price}}
          <div class="mb-3">{{title}}</div>
          <input class="form-control mb-3" placeholder="{{range.from}}">
          <input class="form-control mb-3" placeholder="{{range.to}}">
          <button class="btn btn-outline-secondary" href="{{button.link}}">{{button.text}}</button>
          {{/with}}
        </div>

        <hr class="my-3">

        <div>
          {{#each filterList}}
          <div class="mb-3">{{title}}</div>

          {{#each options}}
          <div class="form-check">
            <label class="form-check-label">{{value}}</label>
            <input class="form-check-input" type="checbox">
          </div>
          {{/each}}

          {{#unless @last}}
          <hr class="my-3">
          {{/unless}}

          {{/each}}
        </div>

      </div>
      {{/with}}
    </div>


    <div class="col-8">
      <div class="row g-3">
        {{#each goodsList}}
        <div class="col-6">
          {{> catalogItem }}
        </div>
        {{/each}}
      </div>
    </div>

    <div class="mt-5">{{>shopaction}}</div>
</main>