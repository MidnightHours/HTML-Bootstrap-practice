{{#with person}}

<header>
	<div>
		<h1>{{name}}</h1>
	</div>
	<div>
		<b>{{age}} years old. {{gender}}</b>
	</div>

	<div class="mt-3">
		{{#with address}}
		<address>
			{{street}},
			{{city}}
			<br />
			{{state}},
			{{country}},
			{{zip}}
		</address>
		{{/with}}
	</div>
</header>

<hr />

<main>
	<section>
		{{> title data="Education" big=true }}
		<div>
			{{#each education}}
			<div><strong>{{degree}}</strong></div>
			<div>Major: {{major}}</div>
			<div class="mt-2"><em>{{university}}</em></div>
			<div>
				<small>
					{{#if graduationYear}}
					Graduation year: {{graduationYear}}
					{{else}}
					still studying
					{{/if}}
				</small>
			</div>
			{{/each}}
		</div>
	</section>

	<hr>
	<hr>

	<section>
		{{> title data="Work Experience" big=true }}
		<div>
			{{#each workExperience}}
			<div><mark>{{title}}</mark></div>
			<div>
				{{startDate}} -
				{{#if endDate}}
				{{endDate}}
				{{else}}
				still working
				{{/if}}
			</div>



			<div class="m-3">{{> link text=company href='https://about.google/' blank=true noLine=true }}</div>

			<div><b>Responsibilities:</b></div>
			<div>
				<ul>
					{{#each responsibilities}}
					<li>
						<div>{{this}}</div>
					</li>
					{{/each}}
				</ul>
			</div>

			<hr>

			{{> title data='About company:'}}
			<div>Industry: {{industry}}</div>
			<div>Was founded in {{year_founded}}</div>

			<div class="m-3"><b>Evployees:</b></div>

			<div>
				{{#each employees}}
				<div>
					{{position}} ({{department}} department) - {{name}}
				</div>

				<div class="mt-3"><strong>Projects:</strong></div>
				<div>
					<ul>
						{{#each projects}}
						<li>
							<div>{{name}}<small>({{status}})</small></div>
							<div>{{description}}</div>

							<div class="mt-3"><b>Teams:</b></div>
							<div>
								<ul>
									{{#each teams}}
									<li>
										<div class="mb-3">{{team_name}}</div>

										{{#with team_leader}}
										<div>
											<b>{{title}}</b>: {{name}} ({{> link href='mailto:{{email}}' text=email
											noLine=true blank=true}})
										</div>
										{{/with}}

										<div class="mt-3"><b>Team members:</b></div>
										<div>
											<ul>
												{{#each team_members}}
												<li>
													<div>
														<em>{{title}}</em>: {{name}}
														({{> link href='mailto:{{email}}' text=email noLine=true
														blank=true}})
													</div>

													<div class="mt-3">Skills:</div>
													<div>
														<ul>
															{{#each skills}}
															<li>{{this}}</li>
															{{/each}}
														</ul>
													</div>

													<div class="mt-3">Projects:</div>
													<div>
														<ul>
															{{#each projects}}
															<li>
																<div>{{name}}</div>
																<div>{{description}}</div>

																<div class="mt-3">Technologies:</div>
																<div>
																	<ul>
																		{{#each technologies}}
																		<li>{{this}}</li>
																		{{/each}}
																	</ul>
																</div>
																<div>Team members:</div>
																<div>
																	<ul>
																		{{#each team_members}}
																		<li>
																			<div><em>{{title}}:</em> {{name}}</div>
																		</li>
																		{{/each}}
																	</ul>
																</div>
															</li>
															{{/each}}
														</ul>
													</div>
												</li>
												{{/each}}
											</ul>
										</div>
									</li>
									{{/each}}
								</ul>
							</div>
						</li>
						{{/each}}
					</ul>
				</div>
				{{/each}}
			</div>
			{{/each}}
		</div>
	</section>
</main>
{{/with}}