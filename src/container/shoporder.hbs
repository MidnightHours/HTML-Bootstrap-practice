<main class="row">

  <div class="col-12 my-5">
    <h1 class="my-3">{{header}}</h1>
  </div>

  <div class="col-8">

    {{#with contacts_data}}
    <div>

      <h3>{{title}}</h3>
      <div class="mt-3">
        {{#each buttons}}
        {{#if isPrimary}}
        <button class="btn btn-warning text-light me-3">{{text}}</button>
        {{/if}}
        {{#if isOutline}}
        <button class="btn btn-outline-warning">{{text}}</button>
        {{/if}}
        {{/each}}
      </div>

      {{#with form}}
      <div>

        <div class="row">
          {{#each input}}
          <div class="col-6">
            <div class="mt-4">
              <label class="form-label">{{label}}</label>
              <input class="form-control" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}</div>
            </div>
          </div>
          {{/each}}
        </div>


        <hr class="my-5">

        {{#each switch}}
        <div class="form-check form-switch my-4">
          <label class="form-check-label">{{text}}</label>
          {{#if isActive}}
          <input checked type="checkbox" class="form-check-input">
          {{else}}
          <input type="checkbox" class="form-check-input">
          {{/if}}
        </div>
        {{/each}}

      </div>
      {{/with}}
    </div>

    {{/with}}
    <hr class="my-5">

  </div>




  <div class="col-4">


    <div class="card p-2">
      {{#each action_block}}
      <div>
        {{#if isSuccess}}
        <button class="btn btn-success my-1">{{text}}</button>
        {{/if}}
        {{#if isDanger}}
        <button class="btn btn-danger my-1">{{text}}</button>
        {{/if}}
        {{#if isInfo}}
        <button class="btn btn-info my-1">{{text}}</button>
        {{/if}}
      </div>
      {{/each}}
    </div>

    {{#with total}}
    <ul class="list-group mt-3">
      <li class="list-group-item">
        <h4>{{title}}</h4>
        {{#each item_list}}
        <div>{{name}}: {{price}}</div>
        {{/each}}
      </li>
      <li class="list-group-item">
        {{#each additional_info}}
        <div>{{text}}: {{value}}</div>
        {{/each}}
      </li>
      <li class="list-group-item">
        {{#with total_price}}
        <div>{{text}}: {{value}}</div>
        {{/with}}
      </li>
      <li class="list-group-item">
        {{#each button}}
        <div class="my-2">
          {{#if isPrimary}}
          <button class="btn btn-primary">{{text}}</button>
          {{/if}}
          {{#if isOutline}}
          <button class="btn btn-outline-primary">{{text}}</button>
          {{/if}}
        </div>
        {{/each}}
      </li>
    </ul>
    {{/with}}



  </div>

  <div class="col-8">
    {{#with delivery}}
    <div>
      <h3>{{title}}</h3>
      <div class="card mt-4 p-3">
        <div class="row">
          {{#each select}}
          <div class="col-6">
            <label class="form-label">{{label}}</label>
            <select class="form-select">
              <option selected disabled>{{placeholder}}</option>
              {{#each options}}
              <option value="{{value}}">{{text}}</option>
              {{/each}}
            </select>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="mt-3">
        {{#each delivery_type}}
        <div class="form-check">
          <label class="form-check-label">{{type}}</label>
          <input {{#if @first}} checked {{/if}} name="deliveryType" type="radio" class="form-check-input">
        </div>
        {{/each}}
      </div>

      <hr class="my-5">

      {{#with payment}}
      <div>
        <h3 class="mb-3">{{title}}</h3>
        {{#each list}}
        <div class="form-check">
          <label class="form-check-label">{{type}}</label>
          <input {{#if @first}} checked {{/if}} name="paymentType" type="radio" class="form-check-input">
          <div class="form-text mb-3">{{description}}</div>
        </div>
        {{/each}}
      </div>
      {{/with}}

      <hr class="my-5">

      {{#with contact}}
      <div>
        <h3>{{title}}</h3>
        <div class="row">
          {{#each this}}
          {{#unless @first}}
          <div class="col-6">
            <div class="mt-4">
              <label class="form-label">{{label}}</label>
              <input class="form-control" placeholder="{{placeholder}}">
              <div class="form-text">{{caption}}</div>
            </div>
          </div>
          {{/unless}}
          {{/each}}
        </div>
      </div>
      {{/with}}

      <hr class="my-5">

      {{#with coment}}
      <div>
        <label class="form-label">{{label}}</label>
        <input class="form-control" placeholder="{{placeholder}}">
      </div>
      {{/with}}

    </div>
    {{/with}}

    <hr class="my-5">

    {{#with coupon}}
    <div>
      <h3>{{title}}</h3>
      {{#each select}}
      <div class="my-3">
        {{#with this}}
        <label class="form-label">{{label}}</label>
        <select class="form-select 
        {{#if @first}} form-select-lg {{/if}}
        {{#if @last}} form-select-sm {{/if}}">
          <option selected disabled>{{placeholder}}</option>
          {{#each options}}
          <option value="{{value}}">{{text}}</option>
          {{/each}}
        </select>
        {{/with}}
      </div>
      {{/each}}

      {{#each add}}
      <div class="my-3">
        {{#with this}}
        <label class="form-label">{{label}}</label>
        <input placeholder="{{placeholder}}" class="form-control 
        {{#if @first}} form-control-lg {{/if}}
        {{#if @last}} form-control-sm {{/if}}">
        <div class="form-text">{{caption}}</div>
        {{/with}}
      </div>
      {{/each}}
    </div>
    {{/with}}

    <hr class="my-5">

    {{#with quiz}}
    <div>
      <h3 class="mb-3">{{title}}</h3>
      {{#with preference}}
      <label class="form-label">{{title}}</label>
      {{#each options}}
      <div class="form-check">
        <label class="form-check-label">{{this}}</label>
        <input name="typeDevice" {{#if @first}} checked {{/if}} class="form-check-input" type="radio">
      </div>
      {{/each}}
      {{/with}}
    </div>
    <div class="my-4">
      {{#with your_expirience}}
      <label class="form-label">{{label}}</label>
      <input class="form-control">
      {{/with}}
    </div>
    <div>
      {{#with purchase_frequency}}
      <label class="form-label">{{label}}</label>
      <select class="form-select">
        <option selected disabled>{{placeholder}}</option>
        {{#each options}}
        <option value="{{value}}">{{text}}</option>
        {{/each}}
      </select>
      {{/with}}
    </div>
    <div class="mt-3">
      {{#with factors}}
      <label class="form-label">{{title}}</label>
      {{#each options}}
      <div class="form-check">
        <label class="form-check-label">{{this}}</label>
        <input class="form-check-input" type="checkbox">
      </div>
      {{/each}}

      {{/with}}
    </div>

    {{/with}}

  </div>


</main>