<main class="mt-5">
  <div class="row">
    {{#with formBlock}}
    <div class="col-8">
      <div>
        <h1 class="my-3">{{header}}</h1>
        <span>
          {{#with rating}}
          {{title}}: {{value}}
          {{/with}}
        </span>
      </div>
      <div>
        {{#with actionBlock}}
        <div class="nav nav-tabs my-5">
          {{#each tabs}}
          <div class="nav-item">
            <a href="#" class="nav-link {{#if isActive}} active {{/if}}">{{text}}</a>
          </div>
          {{/each}}
        </div>

        <hr class="my-5">

        <div class="card p-3">
          {{#with report}}
          <div>{{title}}</div>
          <div class="mt-3">
            <button class="btn btn-secondary" href="{{button.link}}">{{button.text}}</button>
          </div>
          {{/with}}
        </div>
        {{/with}}
      </div>

      <hr class="my-5">

      {{#with feedbackBlock}}
      <div>
        <h2 class="mb-5">{{title}}</h2>
        {{#each buttons}}
        <button href="{{link}}" class=" btn 
            {{#if isWarning}} btn-warning text-light {{/if}}
            {{#if isSuccess}} btn-success mx-4 {{/if}}
            {{#if isDanger}} btn-danger {{/if}}">
          {{text}}
        </button>
        {{/each}}
      </div>
      {{/with}}
    </div>

    <div class="col-4">
      {{#with goodsInfo}}
      <div class="card p-3">
        <img width="120px" src="{{photo}}">
        <big class="mt-4">{{name}}</big>
      </div>
      <div class="card p-3 my-3">
        <big>{{price}}</big>
        <div class="my-2 text-muted">{{#if inMarket}} Є в наявності {{/if}}</div>
        {{#each buttons}}
        <div>
          <button href="{{link}}" class="btn 
            {{#if isPrimary}} btn-primary mb-2{{/if}}
            {{#if isSecondary}} btn-secondary {{/if}}">
            {{text}}
          </button>
        </div>
        {{/each}}
      </div>
      <div class="card p-3">
        <div>
          {{seller.title}}: <b>{{seller.value}}</b>
        </div>
      </div>

      {{/with}}
    </div>
    {{/with}}
  </div>

  <hr class="my-5">

  {{> reviewItem }}

  {{> shopaction}}







</main>