<header>
  <div><h1>{{name}}</h1></div>
  <div>
    <b>Born:</b>
    {{birthdate}},
    <address>{{birthplace}}</address>
  </div>

  <br />

  <div>
    <b>Died:</b>
    {{deathdate}}
    <address>{{deathplace}}</address>
  </div>

  <br />

  <div>
    <b>Nationality:</b>
    {{nationality}}
  </div>

  <br />

  <div>
    <b>Occupation:</b>
    {{occupation}}
  </div>

  <br />

  <div>
    <details>
      <summary><b>Known for:</b></summary>
      <ul>
        {{#each known_for}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </details>
  </div>

</header>
<hr />

<main>
  

  <section>
    {{> title data='Education' big=true }}
    {{#each education}}
      <div> 
        {{institution}} ({{degree}}, {{year}})
      </div>
      <div>
        Field: {{field}}
      </div>
    {{/each}}
  </section>

  <section>
    {{> title data='Notable publications'}}
    <ul>
      {{#each notable_publications}}
        <li><cite>{{title}}</cite> ({{year}}, <small>{{publisher}}</small>)</li>
    
      {{/each}}
    </ul>
  </section>

  <hr>

  <section>
    {{> title data='Spouses' big=true }}
      {{#each partners}}   
        <div>
          {{name}}, ({{relationship}}) 
          <br>
          {{years}}
          <br>
          <br>
          
        </div>
      {{/each}}
  </section>

  <hr>

  <section>
    {{> title data='Awards' big=true }}
    {{#each awards}}
      <div>
        <b>{{title}}</b> ({{year}})
        <br>
        <em>{{description}}</em>
      </div>
    {{/each}}
  </section>

  <hr>

  <section>
    {{> title data='Influence' big=true }}
    <br>
    {{> title data='InfluenceS'  }}
    {{#each influences}}
      <div>
        {{this}}
      <br>
      </div>
    {{/each}}
    
    
    <br>
    {{> title data='InfluenceD'  }}
    {{#each influenced}}
      <div>
        {{this}}
      <br>
      </div>
    {{/each}}

  </section>

  <hr>

  <section>
      {{> title data='Quotes' big=true }}
      <div>
      
        {{#each quotes}}
          <q>{{this}}</q>
          <br>
        {{/each}}
      </div>
  </section>

  <hr>

  <section>
      {{> title data='Major discoveries' big=true }}
      {{#each major_discoveries}}
      <div>
        <b>{{title}}</b> ({{year}})
        <br>
        <em>{{description}}</em>
      </div>
      {{/each}}

  </section>

  <hr>

  <section>
      {{> title data='Contributions' big=true }}
      {{#with contributions}}
      <div>
        <b>{{title}}</b> ({{year}}) - {{field}}
        <br>
        <em>{{description}}</em>
      </div>
      {{/with}}
  </section>


</main>
