<header>
  <div>
    <h1>{{name}}</h1>
  </div>
  <div>
    <b>Born:</b>
    {{birthdate}},
    <address>{{birthplace}}</address>
  </div>



  <div class="my-4">
    <b>Died:</b>
    {{deathdate}}
    <address>{{deathplace}}</address>
  </div>



  <div>
    <b>Nationality:</b>
    {{nationality}}
  </div>



  <div class="my-4">
    <b>Occupation:</b>
    {{occupation}}
  </div>



  <div>
    <details>
      <summary><b>Known for:</b></summary>
      <ul>
        {{#each known_for}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </details>
  </div>

</header>
<hr />

<main>


  <section>
    {{> title data='Education' big=true }}
    {{#each education}}
    <div>
      {{institution}} ({{degree}}, {{year}})
    </div>
    <div>
      Field: {{field}}
    </div>
    {{/each}}
  </section>

  <section class="mt-4">
    {{> title data='Notable publications'}}
    <ul>
      {{#each notable_publications}}
      <li><cite>{{title}}</cite> ({{year}}, <small>{{publisher}}</small>)</li>

      {{/each}}
    </ul>
  </section>

  <hr>

  <section>
    {{> title data='Spouses' big=true }}
    {{#each partners}}
    <div class="mb-5">
      {{name}}, ({{relationship}})
      <br>
      {{years}}

    </div>
    {{/each}}
  </section>

  <hr>

  <section>
    {{> title data='Awards' big=true }}
    {{#each awards}}
    <div>
      <b>{{title}}</b> ({{year}})
      <br>
      <em>{{description}}</em>
    </div>
    {{/each}}
  </section>

  <hr>

  <section>
    {{> title data='Influence' big=true }}

    {{> title data='InfluenceS' }}
    {{#each influences}}
    <div>
      {{this}}
      <br>
    </div>
    {{/each}}

    <br>

    {{> title data='InfluenceD' }}
    {{#each influenced}}
    <div>
      {{this}}
      <br>
    </div>
    {{/each}}

  </section>

  <hr>

  <section>
    {{> title data='Quotes' big=true }}
    <div>

      {{#each quotes}}
      <q>{{this}}</q>
      <br>
      {{/each}}
    </div>
  </section>

  <hr>

  <section>
    {{> title data='Major discoveries' big=true }}
    {{#each major_discoveries}}
    <div>
      <b>{{title}}</b> ({{year}})
      <br>
      <em>{{description}}</em>
    </div>
    {{/each}}

  </section>

  <hr>

  <section>
    {{> title data='Contributions' big=true }}
    {{#with contributions}}
    <div>
      <b>{{title}}</b> ({{year}}) - {{field}}
      <br>
      <em>{{description}}</em>
    </div>
    {{/with}}
  </section>


</main>