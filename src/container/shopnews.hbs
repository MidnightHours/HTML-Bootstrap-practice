<main>
  {{> breadcrumb}}
  <section>
    {{#with newsData}}
    <div>
      <img class="card-img-top" src="{{photo}}">
    </div>
    <article>
      <div class="mb-4">
        {{#with head}}
        <h1 class="my-4">{{heading}}</h1>
        <p>{{description}}</p>
        {{/with}}
      </div>
      <div>
        {{#each body}}
        <h3>{{title}}</h3>
        <p>{{text}}</p>
        {{/each}}
      </div>
    </article>
    {{/with}}
  </section>

  <hr class="my-5">

  <section>
    {{#with newsOtherBlock}}
    <div class="mt-5 mb-3">
      <h2 class="text-center">{{title}}</h2>
    </div>
    <div class="row g-2">
      {{#each cards}}
      <div class="col-3">
        {{> shoppost }}
      </div>
      {{/each}}
    </div>
    {{/with}}
  </section>

  <hr class="my-5">

  <section>
    {{> shopaction }}
  </section>


</main>