<main>
  <section class="card">
    {{#with heading}}
    <div class="card">
      <div class="card-body">
        {{#with main}}
        <h1>{{title}}</h1>
        <p>{{text}}</p>
        <button class="btn btn-primary">{{button_text.solid}}</button>
        <br>
        <br>
        <br>
        <button class="btn btn-outline-primary">{{button_text.outline}}</button>
        {{/with}}
      </div>
    </div>
    <br>
    <div class="card">
      <div class="card-body">
        {{#with second}}
        <h2>{{title}}</h2>
        <p>{{text}}</p>
        <button class="btn btn-secondary">{{button_text.solid}}</button>
        <br>
        <br>
        <button class="btn btn-outline-secondary">{{button_text.outline}}</button>
        {{/with}}
      </div>
    </div>
    <br>
    <div class="card">
      <div class="card-body">
        {{#with subblock}}
        <h3>{{title}}</h3>
        <p>{{text}}</p>
        <button class="btn btn-dark">{{button_text.solid}}</button>
        <br>
        <br>
        <button class="btn btn-outline-dark">{{button_text.outline}}</button>
        {{/with}}
      </div>
    </div>
    {{/with}}
  </section>

  <br>
  <br>

  <section class="card">
    {{#with nested_display}}
    <div class="card-body">
      <div class="display-1">{{title}}</div>
      <br>
      <div class="card">
        {{#with children_display}}
        <div class="card-body">
          <div class="display-4">{{title}}</div>
          <br>
          <p>{{text}}</p>
          <button class="btn btn-outline-warning">{{button.text}}</button>
        </div>
        {{/with}}
      </div>
      <br>
      <h6>{{header_text}}</h6>
      <br>
      <button class="btn btn-info">{{button.text}}</button>
    </div>
    {{/with}}
  </section>

  <br>
  <br>

  <section class="card">
    {{#with paragraph}}
    <div class="card-body">
      <p class="text-uppercase">{{title}}</p>
      <p class="text-lowercase">{{text}}</p>
      <a href="{{button.url}}" target="_blank" class="btn btn-link">{{button.text}}</a>
      <br>
      <br>
      <ul class="card">
        {{#each list_name}}
        <li class="card-body">
          <a href="{{url}}" target="_blank" class="btn btn-link">{{text}}</a>
        </li>
        {{/each}}
      </ul>
    </div>
    {{/with}}
  </section>

</main>